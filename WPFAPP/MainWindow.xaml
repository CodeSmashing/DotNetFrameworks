<Window x:Class="WPFAPP.MainWindow"
		  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		  xmlns:local="clr-namespace:WPFAPP"
		  mc:Ignorable="d"
		  Title="MainWindow" Height="1080" Width="1920">
	<StackPanel Margin="0,0,0,0" Orientation="Horizontal">
		<TabControl x:Name="tcNavigation" Width="1920">
			<TabItem x:Name="tciAppointmentRequest" Header="Appointment request">
				<StackPanel Width="auto">
					<DataGrid
						x:Name="dgAppointments"
						Height="auto"
						Width="auto"
						MaxHeight="300"
						VerticalAlignment="Top"
						HorizontalAlignment="Center"
						SelectionMode="Single"
						Margin="10px"
						AutoGenerateColumns="False">

						<DataGrid.Columns>
							<DataGridTextColumn
							Header="From"
							Binding="{Binding From}"
							Width="150"
							IsReadOnly="True"/>

							<DataGridTextColumn
							Header="To"
							Binding="{Binding To}"
							Width="150"
							IsReadOnly="True"/>

							<DataGridTextColumn
							Header="Appointment"
							Binding="{Binding Title}"
							Width="200"
							IsReadOnly="True"/>

							<DataGridTextColumn
							Header="Description"
							Binding="{Binding Description}"
							Width="300"
							IsReadOnly="True"/>

							<DataGridTextColumn
							Header="Type"
							Binding="{Binding AppointmentType.Name}"
							Width="150"
							IsReadOnly="True"/>
						</DataGrid.Columns>
					</DataGrid>

					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
						<Button
							x:Name="btnAdd"
							Content="Toevoegen"
							Click="btnAdd_Click"/>
						<Button
							x:Name="btnEdit"
							Content="Wijzigen"
							IsEnabled="False"
							Click="btnEdit_Click"/>
						<Button
							x:Name="btnDelete"
							Content="Verwijderen"
							IsEnabled="False"
							Click="btnDelete_Click" />
						<Button
							x:Name="btnSave"
							Content="Opslaan"
							Visibility="Visible"
							Click="btnSave_Click" Height="66"/>
					</StackPanel>
					<Grid x:Name="grDetails" Visibility="Visible">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>

						<Label Content="Wanneer:" Grid.Row="0" Grid.Column="0"/>
						<DatePicker
									 x:Name="dpFrom"
									 Grid.Row="0"
									 Grid.Column="1"
									 Text="{Binding From, Mode=TwoWay}"
									 Width="150"
									 HorizontalAlignment="Left"
									 SelectedDateChanged="SelectedDateChanged" />

						<Label Content="Titel:"  Grid.Row="1" Grid.Column="0" />
						<TextBox
									 x:Name="tbTitle"
									 Grid.Row="1"
									 Grid.Column="1"
									 Text="{Binding Title, Mode=TwoWay}"
									 TextChanged="TextChanged" />

						<Label Content="Type Afspraak:"  Grid.Row="2" Grid.Column="0"/>
						<ComboBox
									 x:Name="cbTypes"
									 Grid.Row="1"
									 Grid.Column="1"
									 SelectedItem="{Binding AppointmentType, Mode=TwoWay}"
									 Width="150"
									 HorizontalAlignment="Center"
									 SelectionChanged="SelectedDateChanged" Margin="0,44,0,44" Grid.RowSpan="3" />

						<Label Content="Extra Informatie:"  VerticalAlignment="Top" Grid.Row="3" Grid.Column="0" />
						<TextBox
									 x:Name="tbDescription"
									 Grid.Row="3" Grid.Column="1"
									 Grid.ColumnSpan="3"
									 Width="550"
									 VerticalScrollBarVisibility="Auto"
									 Text="{Binding Description, Mode=TwoWay}"
									 AcceptsReturn="True"
									 TextChanged="TextChanged" Margin="0,0,1233,-1" />
					</Grid>
				</StackPanel>
			</TabItem>
			<TabItem x:Name="tciRegisterLogin" Header="Register/login">
				<Grid x:Name="FormContainer" />
			</TabItem>
			<TabItem x:Name="tciUsers" Header="Users" Visibility="Visible">
				<StackPanel x:Name="UserRoleInfoContainer" />
			</TabItem>
			<TabItem x:Name="tciGeneral" Header="General" Visibility="Visible">
				<StackPanel Orientation="Vertical" Margin="10px">
					<TextBlock Text="User" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
					<StackPanel Orientation="Horizontal" Margin="0,0,0,5">
						<TextBlock Text="Username:" FontWeight="Bold" Width="100"/>
						<TextBlock x:Name="tbUsernameInfo"/>
					</StackPanel>
					<Button x:Name="btnLogout" Content="Logout" Width="100" Margin="0,10,0,0" Click="btnLogout_Click"/>
				</StackPanel>
			</TabItem>
		</TabControl>
	</StackPanel>
</Window>
