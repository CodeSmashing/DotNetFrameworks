<Window x:Class="WPFAPP.MainWindow"
		  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		  xmlns:local="clr-namespace:WPFAPP"
		  mc:Ignorable="d"
		  Title="MainWindow" Height="Auto" Width="Auto">
	<StackPanel Margin="0,0,0,0" Orientation="Horizontal">
		<TabControl x:Name="tcNavigation">
			<TabItem x:Name="tciAppointmentTab" Header="Afspraak aanvragen">
				<StackPanel x:Name="AppointmentContainer"/>
			</TabItem>
			<TabItem x:Name="tciAuthenticationTab" Header="Registreren/login">
				<Grid x:Name="AuthenticationContainer"/>
			</TabItem>
			<TabItem x:Name="tciUsers" Header="Users" Visibility="Visible">
				<StackPanel x:Name="UserRoleInfoContainer" />
			<TabItem x:Name="tciUserInfoTab" Header="Algemeen">
				<StackPanel x:Name="UserInfoContainer" />
			</TabItem>
			<TabItem x:Name="tciAdmin" Header="Admin Panel" Visibility="Visible">
				<StackPanel x:Name="AdminPanelContainer" />
			</TabItem>
		</TabControl>
	</StackPanel>
</Window>
