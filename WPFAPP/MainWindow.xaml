<Window x:Class="WPFAPP.MainWindow"
		  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		  xmlns:local="clr-namespace:WPFAPP"
		  mc:Ignorable="d"
		  Title="MainWindow" Height="Auto" Width="Auto">
	<StackPanel Margin="0,0,0,0" Orientation="Horizontal">
		<TabControl x:Name="tcNavigation">
			<TabItem x:Name="tciAppointmentTab" Header="Afspraak aanvragen">
				<StackPanel x:Name="AppointmentContainer"/>
			</TabItem>
			<TabItem x:Name="tciRegisterLogin" Header="Register/login">
				<Grid x:Name="FormContainer"/>
			</TabItem>
			<TabItem x:Name="tciUsers" Header="Users" Visibility="Visible">
				<StackPanel x:Name="UserRoleInfoContainer" />
			</TabItem>
			<TabItem x:Name="tciAdmin" Header="Admin Panel" Visibility="Visible">
				<StackPanel x:Name="AdminPanelContainer" />
			</TabItem>
			<TabItem x:Name="tciGeneral" Header="General" Visibility="Visible">
				<StackPanel Orientation="Vertical" Margin="10px">
					<TextBlock Text="User" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
					<StackPanel Orientation="Horizontal" Margin="0,0,0,5">
						<TextBlock Text="Username:" FontWeight="Bold" Width="100"/>
						<TextBlock x:Name="tbUsernameInfo"/>
					</StackPanel>
					<Button x:Name="btnLogout" Content="Logout" Width="100" Margin="0,10,0,0" Click="btnLogout_Click"/>
				</StackPanel>
			</TabItem>
		</TabControl>
	</StackPanel>
</Window>
