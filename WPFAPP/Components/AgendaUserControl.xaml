<UserControl x:Class="WPFAPP.AgendaUserControl"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
				xmlns:local="clr-namespace:WPFAPP"
				mc:Ignorable="d"
				Style="{StaticResource BaseUserControl}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="20"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Filter for a specific user -->
		<Grid
			Style="{StaticResource SearchFilterPanel}"
			Grid.Row="0">
			<TextBox
				x:Name="tbFilterUser"
				TextChanged="tbFilter_TextChanged"/>
			<Label
				x:Name="tbFilterUserPlaceholder"
				Content="Naam..."
				IsHitTestVisible="False"/>
		</Grid>

		<!-- Pick the user to edit the values of -->
		<DataGrid
			x:Name="dgUsers"
			SelectionMode="Single"
			SelectionChanged="dgUsers_SelectionChanged"
			Grid.Row="1">
			<DataGrid.Columns>
				<DataGridTextColumn
					Header="Id"
					Binding="{Binding Id}"
					MaxWidth="100"
					Width="*"/>

				<DataGridTextColumn
					Header="Voornaam"
					Binding="{Binding FirstName}"
					Width="*"/>

				<DataGridTextColumn
					Header="Achternaam"
					Binding="{Binding LastName}"
					Width="*"/>

				<DataGridTextColumn
					Header="Weergavenaam"
					Binding="{Binding DisplayName}"
					Width="*"/>
			</DataGrid.Columns>
		</DataGrid>

		<!-- Grid to display and edit the selected users info -->
		<Grid
			Style="{StaticResource GridDetails}"
			x:Name="grDetails"
			Grid.Row="3">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<Grid
				x:Name="grDetailsControls"
				HorizontalAlignment="Stretch"
				Margin="5"
				Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="10"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="10"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="10"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Button
					x:Name="btnAdd"
					Content="Toevoegen"
					IsEnabled="False"
					Click="btnAdd_Click"
					Grid.Column="0"/>
				<Button
					x:Name="btnEdit"
					Content="Wijzigen"
					IsEnabled="False"
					Click="btnEdit_Click"
					Grid.Column="2"/>
				<Button
					x:Name="btnDelete"
					Content="Verwijderen"
					IsEnabled="False"
					Click="btnDelete_Click"
					Grid.Column="4"/>
				<Button
					x:Name="btnSave"
					Content="Opslaan"
					IsEnabled="False"
					Click="btnSave_Click"
					Grid.Column="6"/>
			</Grid>

			<Grid
				x:Name="grDetailsInputs"
				Margin="0"
				Grid.Row="1"
				HorizontalAlignment="Center"
				Visibility="Collapsed">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<Label
					Content="Voornaam:"
					Grid.Row="0"
					Grid.Column="0"/>
				<TextBox
					Style="{StaticResource TextBoxWide}"
					x:Name="tbFirstName"
					Grid.Row="0"
					Grid.Column="1"
					Text="{Binding FirstName, Mode=TwoWay}"
					TextChanged="grDetails_InfoChanged"/>

				<Label
					Content="Achternaam"
					Grid.Row="1"
					Grid.Column="0"/>
				<TextBox
					Style="{StaticResource TextBoxWide}"
					x:Name="tbLastName"
					Grid.Row="1"
					Grid.Column="1"
					Text="{Binding LastName, Mode=TwoWay}"
					TextChanged="grDetails_InfoChanged"/>

				<Label
					Content="Weergave naam:"
					Grid.Row="2"
					Grid.Column="0"/>
				<TextBox
					Style="{StaticResource TextBoxWide}"
					x:Name="tbDisplayName"
					Grid.Row="2"
					Grid.Column="1"
					Text="{Binding DisplayName, Mode=TwoWay}"
					TextChanged="grDetails_InfoChanged"/>

				<Label
					Content="Email:"
					Grid.Row="3"
					Grid.Column="0"/>
				<TextBox
					Style="{StaticResource TextBoxWide}"
					x:Name="tbEmail"
					Grid.Row="3"
					Grid.Column="1"
					Text="{Binding Email, Mode=TwoWay}"
					TextChanged="grDetails_InfoChanged"/>

				<Label
					Content="Wachtwoord"
					Grid.Row="4"
					Grid.Column="0"/>
				<PasswordBox
					Style="{StaticResource PasswordBoxWide}"
					x:Name="pbPassword"
					Grid.Row="4"
					Grid.Column="1"
					PasswordChanged="grDetails_InfoChanged"/>

				<Label
					Content="Wachtwoord bevestiging"
					Grid.Row="5"
					Grid.Column="0"/>
				<PasswordBox
					Style="{StaticResource PasswordBoxWide}"
					x:Name="pbPasswordConfirm"
					Grid.Row="5"
					Grid.Column="1"
					PasswordChanged="grDetails_InfoChanged"/>

				<StackPanel
					x:Name="spError"
					Grid.Row="6"
					Grid.ColumnSpan="2"/>
			</Grid>
		</Grid>
	</Grid>
</UserControl>
