<UserControl x:Class="WPFAPP.RoleControl"
				 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
				 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
				 xmlns:local="clr-namespace:WPFAPP"
				 mc:Ignorable="d" 
				 d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel Orientation="Vertical" Margin="10px">
		<TextBlock
			Text="Role Management"
			Style="{StaticResource TitleH4}"/>

		<StackPanel Orientation="Horizontal" Margin="10">
			<!-- Pick the user to edit the roles of -->
			<Label
				Content="Gebruiker:"
				VerticalAlignment="Top"
				Margin="0,10"/>
			<ComboBox
				x:Name="cbUsers"
				VerticalAlignment="Top"
				Width="200"
				Height="50"
				Margin="10"
				SelectionChanged="cbUsers_SelectionChanged"/>

			<!-- ListBox to load the current roles of the user -->
			<Label
				Content="Huidige Rollen:"
				Margin="40,10,0,0"
				VerticalAlignment="Top"/>
			<ListBox
				x:Name="lbRoles"
				Width="200"
				Margin="10"
				SelectionMode="Multiple"
				SelectionChanged="lbRoles_SelectionChanged">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel>
							<ListBoxItem
								Content="{Binding Id}"/>
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</StackPanel>
	</StackPanel>
</UserControl>
