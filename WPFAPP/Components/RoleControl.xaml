<UserControl x:Class="WPFAPP.RoleControl"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
				xmlns:local="clr-namespace:WPFAPP"
				mc:Ignorable="d"
				Style="{StaticResource BaseUserControl}">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<TextBlock
			Text="Role Management"
			Style="{StaticResource TitleH3}"
			Grid.Row="0"
			Grid.ColumnSpan="2"/>

		<!-- Filter for a specific user -->
		<Grid
			Style="{StaticResource SearchFilterPanel}"
			Grid.Row="1"
			Grid.Column="0">
			<TextBox
				x:Name="tbFilterUser"
				TextChanged="tbFilter_TextChanged"/>
			<Label
				x:Name="tbFilterUserPlaceholder"
				Content="Naam..."
				IsHitTestVisible="False"/>
		</Grid>

		<!-- Filter for a specific Role -->
		<Grid
			Style="{StaticResource SearchFilterPanel}"
			Grid.Row="1"
			Grid.Column="1">
			<TextBox
				x:Name="tbFilterRole"
				TextChanged="tbFilter_TextChanged"/>
			<Label
				x:Name="tbFilterRolePlaceholder"
				Content="Rol..."
				IsHitTestVisible="False"/>
		</Grid>

		<!-- Pick the user to edit the roles of -->
		<DataGrid
			x:Name="dgUsers"
			SelectionMode="Single"
			SelectionChanged="dgUsers_SelectionChanged"
			Grid.Row="2"
			Grid.ColumnSpan="2">
			<DataGrid.Columns>
				<DataGridTextColumn
					Header="Id"
					Binding="{Binding Id}"
					MaxWidth="100"/>

				<DataGridTextColumn
					Header="Voornaam"
					Binding="{Binding FirstName}"
					Width="Auto"/>

				<DataGridTextColumn
					Header="Achternaam"
					Binding="{Binding LastName}"
					Width="Auto"/>

				<DataGridTextColumn
					Header="Weergavenaam"
					Binding="{Binding DisplayName}"
					Width="Auto"/>
			</DataGrid.Columns>
		</DataGrid>

		<!-- ListBox to load the current roles of the user -->
		<ListBox
			x:Name="lbRoles"
			SelectionMode="Multiple"
			SelectionChanged="lbRoles_SelectionChanged"
			HorizontalAlignment="Stretch"
			Grid.Row="3"
			Grid.ColumnSpan="2">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel>
						<ListBoxItem Content="{Binding Id}"/>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</UserControl>
