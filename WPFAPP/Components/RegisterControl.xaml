<UserControl x:Class="WPFAPP.RegisterControl"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
				xmlns:local="clr-namespace:WPFAPP"
				mc:Ignorable="d"
				Style="{StaticResource BaseUserControl}">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock
			Style="{StaticResource TitleH5}"
			Text="Register"
			Grid.Row="0" 
			Background="Transparent"
			Grid.ColumnSpan="2"
			HorizontalAlignment="Left"
			Margin="135,20,0,20"/>

		<Label
			Content="Gebruikersnaam:"
			Grid.Row="1"
			Grid.Column="0"/>
		<TextBox
			Style="{StaticResource TextBoxWide}"
			x:Name="tbDisplayname"
			Grid.Row="1"
			Width="Auto"
			Background="WhiteSmoke"
			Grid.Column="2"/>

		<Label
			Content="Voornaam"
			Grid.Row="2"
			Grid.Column="0"/>
		<TextBox
			Style="{StaticResource TextBoxWide}"
			x:Name="tbFirstName"
			Grid.Row="2"
			Width="Auto"
			Background="WhiteSmoke"
			Grid.Column="2"/>

		<Label
			Content="Achternaam"
			Grid.Row="3"
			Grid.Column="0"/>
		<TextBox
			Style="{StaticResource TextBoxWide}"
			x:Name="tbLastName"
			Grid.Row="3"
			Width="Auto"
			Background="WhiteSmoke"
			Grid.Column="2"/>

		<Label
			Content="Email:"
			Grid.Row="4"
			Grid.Column="0"/>
		<TextBox
			Style="{StaticResource TextBoxWide}"
			x:Name="tbEmail"
			Grid.Row="4"
			Width="Auto"
			Background="WhiteSmoke"
			Grid.Column="2"/>

		<Label
			Content="Wachtwoord"
			Grid.Row="5"
			Grid.Column="0"/>
		<PasswordBox
			Style="{StaticResource PasswordBoxWide}"
			x:Name="pbPassword"
			Background="LightGray"
			Width="Auto"
			Grid.Row="5"
			Grid.Column="2"/>

		<Label
			Content="Wachtwoord bevestiging"
			Grid.Row="6"
			Grid.Column="0"/>
		<PasswordBox
			Style="{StaticResource PasswordBoxWide}"
			x:Name="pbConfirmPassword"
			Background="LightGray"
			Width="Auto"
			Grid.Row="6"
			Grid.Column="2"/>

		<Button
			x:Name="btnRegister"
			Content="Registeren"
			Grid.Row="7"
			Grid.Column="1"
			Style="{StaticResource ButtonCentered}"
			Click="btnRegister_Click" Margin="0,7,0,7" Width="154"/>
		<Button
			x:Name="btnSwap"
			Content="Al geregistreerd?"
			Style="{StaticResource ButtonCentered}"
			Click="btnSwap_Click"
			Margin="0,7,0,7"
			Width="180"
			RenderTransformOrigin="0.463,0.547"
			Grid.Row="7" />

		<StackPanel
			x:Name="tbError"
			Grid.Row="9"
			Grid.Column="1"
			Grid.ColumnSpan="2"/>
	</Grid>
</UserControl>
