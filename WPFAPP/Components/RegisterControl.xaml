<UserControl x:Class="WPFAPP.RegisterControl"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
				xmlns:local="clr-namespace:WPFAPP"
				mc:Ignorable="d"
				Style="{StaticResource BaseUserControl}">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock
			Style="{StaticResource TitleH1}"
			Text="Register"
			Grid.Row="0" 
			Grid.Column="0" 
			Grid.ColumnSpan="2"/>

		<Label
			Content="Gebruikersnaam:"
			Grid.Row="1"
			Grid.Column="0"/>
		<TextBox
			Style="{StaticResource TextBoxWide}"
			x:Name="tbDisplayname"
			Grid.Row="1"
			Grid.Column="2"/>

		<Label
			Content="Voornaam"
			Grid.Row="2"
			Grid.Column="0"/>
		<TextBox
			Style="{StaticResource TextBoxWide}"
			x:Name="tbFirstName"
			Grid.Row="2"
			Grid.Column="2"/>

		<Label
			Content="Achternaam"
			Grid.Row="3"
			Grid.Column="0"/>
		<TextBox
			Style="{StaticResource TextBoxWide}"
			x:Name="tbLastName"
			Grid.Row="3"
			Grid.Column="2"/>

		<Label
			Content="Email:"
			Grid.Row="4"
			Grid.Column="0"/>
		<TextBox
			Style="{StaticResource TextBoxWide}"
			x:Name="tbEmail"
			Grid.Row="4"
			Grid.Column="2"/>

		<Label
			Content="Wachtwoord"
			Grid.Row="5"
			Grid.Column="0"/>
		<PasswordBox
			Style="{StaticResource PasswordBoxWide}"
			x:Name="pbPassword"
			Grid.Row="5"
			Grid.Column="2"/>

		<Label
			Content="Wachtwoord bevestiging"
			Grid.Row="6"
			Grid.Column="0"/>
		<PasswordBox
			Style="{StaticResource PasswordBoxWide}"
			x:Name="pbConfirmPassword"
			Grid.Row="6"
			Grid.Column="2"/>

		<Button
			x:Name="btnRegister"
			Content="Registeren"
			Grid.Row="7"
			Grid.Column="1"
			Style="{StaticResource ButtonCentered}"
			Click="btnRegister_Click"/>
		<Button
			x:Name="btnSwap"
			Content="Al geregistreerd?"
			Style="{StaticResource ButtonCentered}"
			Click="btnSwap_Click"
			Grid.Row="7" />

		<StackPanel
			x:Name="spError"
			Grid.Row="9"
			Grid.Column="1"
			Grid.ColumnSpan="2"/>
	</Grid>
</UserControl>
