<UserControl x:Class="WPFAPP.AppointmentControl"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
				xmlns:local="clr-namespace:WPFAPP"
				mc:Ignorable="d"
				Style="{StaticResource BaseUserControl}">
	<StackPanel Width="auto">
		<Grid Style="{StaticResource SearchFilterPanel}">
			<TextBox
				x:Name="tbFilter"
				TextChanged="tbFilter_TextChanged"/>
			<Label
				x:Name="tbFilterPlaceholder"
				Content="Search..."
				IsHitTestVisible="False"/>
		</Grid>

		<DataGrid
			x:Name="dgAppointments"
			MaxHeight="300"
			VerticalAlignment="Top"
			HorizontalAlignment="Center"
			SelectionMode="Single"
			SelectionChanged="dgAppointments_SelectionChanged"
			Margin="10px"
			AutoGenerateColumns="False"
			CanUserAddRows="False"
			CanUserResizeRows="False"
			CanUserDeleteRows="False">

			<DataGrid.Columns>
				<DataGridTextColumn
					Header="Date"
					Binding="{Binding Date}"
					Width="150"
					IsReadOnly="True"/>

				<DataGridTextColumn
					Header="Appointment"
					Binding="{Binding Title}"
					Width="200"
					IsReadOnly="True"/>

				<DataGridTextColumn
					Header="Description"
					Binding="{Binding Description}"
					Width="300"
					IsReadOnly="True"/>

				<DataGridTextColumn
					Header="Type"
					Binding="{Binding AppointmentType.Name}"
					Width="150"
					IsReadOnly="True"/>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel
			Orientation="Horizontal"
			HorizontalAlignment="Center"
			Margin="5">
			<Button
				x:Name="btnAdd"
				Content="Toevoegen"
				IsEnabled="False"
				Click="btnAdd_Click"/>
			<Button
				x:Name="btnEdit"
				Content="Wijzigen"
				IsEnabled="False"
				Click="btnEdit_Click"/>
			<Button
				x:Name="btnDelete"
				Content="Verwijderen"
				IsEnabled="False"
				Click="btnDelete_Click" />
			<Button
				x:Name="btnSave"
				Content="Opslaan"
				IsEnabled="False"
				Click="btnSave_Click"/>
		</StackPanel>

		<Grid
			x:Name="grDetails"
			Visibility="Collapsed"
			HorizontalAlignment="Center"
			Width="700"
			Margin="5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<Label
				Content="Wanneer:"
				Grid.Row="0"
				Grid.Column="0"/>
			<DatePicker
				x:Name="dpDate"
				Grid.Row="0"
				Grid.Column="1"
				Width="541"
				SelectedDate="{Binding Date, Mode=TwoWay}"
				HorizontalAlignment="Left"
				SelectedDateChanged="grDetails_InfoChanged"
				Margin="0,0,0,50"
				Grid.RowSpan="2" />

			<Label
				Content="Titel:" 
				Grid.Row="1"
				Grid.Column="0" />
			<TextBox
				x:Name="tbTitle"
				Grid.Row="1"
				Grid.Column="1"
				Text="{Binding Title, Mode=TwoWay}"
				TextChanged="grDetails_InfoChanged" />

			<Label
				Content="Type Afspraak:" 
				Grid.Row="2"
				Grid.Column="0"/>
			<ComboBox
				x:Name="cbTypes"
				Grid.Row="2"
				Grid.Column="1"
				SelectedItem="{Binding AppointmentType, Mode=TwoWay}"
				Height="AUto"
				Width="557"
				HorizontalAlignment="Left"
				SelectionChanged="grDetails_InfoChanged"
				Margin="0,0,0,50"
				Grid.RowSpan="2">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<StackPanel>
							<TextBlock
								Text="{Binding Name}"
								FontWeight="Bold"
								Margin="0"
								Padding="0" />
							<TextBlock
								Text="{Binding Description}"
								FontStyle="Italic"
								FontSize="18"
								Margin="0,0,0,10"
								Padding="0" />
						</StackPanel>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>

			<Label
				Content="Extra Informatie:" 
				VerticalAlignment="Top"
				Grid.Row="3"
				Grid.Column="0" />
			<TextBox
				x:Name="tbDescription"
				Grid.Row="3"
				Grid.Column="1"
				Width="541"
				VerticalScrollBarVisibility="Auto"
				HorizontalAlignment="Left"
				Text="{Binding Description, Mode=TwoWay}"
				TextChanged="grDetails_InfoChanged"
				AcceptsReturn="True"
				Margin="0,0,0,-1" />
		</Grid>
		<local:VehicleSelector/>
	</StackPanel>
</UserControl>
