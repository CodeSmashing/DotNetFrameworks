<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Define a DataGridRow style as a resource -->
	<Style x:Key="CustomDataGridRowStyle" TargetType="DataGridRow">
		<!-- Removed EventSetter for MouseDoubleClick -->
		<Style.Triggers>
			<Trigger Property="IsSelected" Value="True">
				<Setter Property="Background" Value="#ff66ccff" />
				<Setter Property="Foreground" Value="Black" />
			</Trigger>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="LightGreen" />
			</Trigger>
		</Style.Triggers>
	</Style>

	<!-- Apply the DataGridRow style to all DataGrids -->
	<Style TargetType="DataGrid">
		<!-- Reference the row style using the RowStyle property -->
		<Setter Property="RowStyle" Value="{StaticResource CustomDataGridRowStyle}" />

		<!-- Border and grid lines -->
		<Setter Property="BorderBrush" Value="#DDDDDD" />
		<Setter Property="HorizontalGridLinesBrush" Value="#DDDDDD" />
		<Setter Property="VerticalGridLinesBrush" Value="#DDDDDD" />

		<Setter Property="CellStyle">
			<Setter.Value>
				<Style TargetType="DataGridCell">
					<Style.Triggers>
						<!-- Highlight selected rows -->
						<Trigger Property="IsSelected" Value="True">
							<Setter Property="Background" Value="#ff66ccff" />
							<Setter Property="BorderBrush" Value="Transparent" />
							<Setter Property="Foreground" Value="Black" />
						</Trigger>
						<Trigger Property="IsFocused" Value="True">
							<Setter Property="Background" Value="#ff66ccff" />
							<Setter Property="BorderBrush" Value="Black" />
							<Setter Property="BorderThickness" Value="1"/>
							<Setter Property="Foreground" Value="Black" />
						</Trigger>
					</Style.Triggers>

					<!-- Padding -->
					<Setter Property="Padding" Value="4,3,4,3" />
					<Setter Property="BorderBrush" Value="Transparent"/>
					<Setter Property="BorderThickness" Value="1"/>
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="DataGridCell">
								<Border Padding="{TemplateBinding Padding}" 
											BorderBrush="{TemplateBinding BorderBrush}"
											BorderThickness="{TemplateBinding BorderThickness}"
											Background="{TemplateBinding Background}">
									<ContentPresenter />
								</Border>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
					<Setter Property="FocusVisualStyle">
						<Setter.Value>
							<Style TargetType="Control">
								<Setter Property="BorderBrush" Value="Transparent" />
							</Style>
						</Setter.Value>
					</Setter>
				</Style>
			</Setter.Value>
		</Setter>
	</Style>



	<!-- Implicit style targeting all TextBlocks using resources -->
	<Style TargetType="TextBlock">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Foreground" Value="DarkSlateGray" />
		<Setter Property="Padding" Value="{DynamicResource StandardPadding}"/>
		<Setter Property="FontFamily" Value="{DynamicResource PrimaryFont}"/>
		<Setter Property="FontSize" Value="18"/>
	</Style>

	<!-- Explicit named style targeting TextBlock to help with nested resource dictionaries -->
	<Style x:Key="BaseTextBlock" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"/>

	<!-- Implicit style targeting all TextBox's using resources -->
	<Style TargetType="TextBox">
		<Setter Property="Background" Value="WhiteSmoke"/>
		<Setter Property="Foreground" Value="DarkSlateGray" />
		<Setter Property="Padding" Value="{DynamicResource StandardPadding}"/>
		<Setter Property="FontFamily" Value="{DynamicResource PrimaryFont}"/>
		<Setter Property="FontSize" Value="18"/>
	</Style>

	<!-- Explicit named style targeting TextBox to help with nested resource dictionaries -->
	<Style x:Key="BaseTextBox" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}"/>

	<!-- Implicit style targeting all Controls using resources -->
	<Style TargetType="Control">
		<Setter Property="Margin" Value="{StaticResource StandardMargin}"/>
		<Setter Property="Width" Value="{StaticResource PrimaryInteractiveWidth}"/>
		<Setter Property="Height" Value="{StaticResource PrimaryInteractiveHeight}"/>
		<Setter Property="Height" Value="{StaticResource PrimaryInteractiveHeight}"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
	</Style>

	<!-- Explicit named style targeting Control to help with nested resource dictionaries -->
	<Style x:Key="BaseControl" TargetType="Control" BasedOn="{StaticResource {x:Type Control}}"/>

	<!-- Implicit style targeting all Buttons using resources -->
	<Style TargetType="Button">
		<Setter Property="Background" Value="WhiteSmoke"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>

		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<Grid Background="{TemplateBinding Background}">
						<ContentPresenter x:Name="MyContentPresenter"
												Content="{TemplateBinding Content}"
												HorizontalAlignment="Center"
												VerticalAlignment="Center" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Style.Triggers>
			<Trigger Property="IsEnabled" Value="False">
				<Setter Property="Opacity" Value="1"/>
				<Setter Property="Foreground" Value="Black"/>
				<Setter Property="Background" Value="LightGray"/>
			</Trigger>
		</Style.Triggers>
	</Style>

	<!-- Explicit named style targeting Button to help with nested resource dictionaries -->
	<Style x:Key="BaseButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}"/>

	<!-- Centred style for Buttons, inherits -->
	<Style
		x:Key="ButtonCentered"
		TargetType="Button"
		BasedOn="{StaticResource {x:Type Button}}">

		<Setter Property="Margin" Value="0,10,0,5"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
	</Style>

	<!-- Implicit style targeting all Labels using resources -->
	<Style TargetType="Label">
		<Setter Property="Background" Value="WhiteSmoke"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="HorizontalContentAlignment" Value="Right"/>
	</Style>

	<!-- Explicit named style targeting Label to help with nested resource dictionaries -->
	<Style x:Key="BaseLabel" TargetType="Label" BasedOn="{StaticResource {x:Type Label}}"/>

	<!-- Base style for title, inherits -->
	<Style x:Key="BaseTitle" TargetType="TextBlock">
		<Setter Property="Background" Value="Violet"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="TextWrapping" Value="NoWrap"/>
		<Setter Property="Width" Value="Auto"/>
		<Setter Property="Height" Value="Auto"/>
		<Setter Property="Margin" Value="10,20"/>
	</Style>

	<!-- H4 style for title, inherits -->
	<Style x:Key="TitleH4" TargetType="TextBlock" BasedOn="{StaticResource BaseTitle}">
		<Setter Property="FontSize" Value="20"/>
		<Setter Property="FontWeight" Value="Bold"/>
	</Style>

	<!-- H5 style for title, inherits -->
	<Style x:Key="TitleH5" TargetType="TextBlock" BasedOn="{StaticResource BaseTitle}">
		<Setter Property="FontSize" Value="24"/>
		<Setter Property="FontWeight" Value="Bold"/>
	</Style>

	<!-- Wider TextBox style, inherits -->
	<Style x:Key="TextBoxWide" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}" >
		<Setter Property="Width" Value="200"/>
	</Style>

	<!-- Base style for PasswordBox, inherits -->
	<Style TargetType="PasswordBox">
		<Setter Property="Background" Value="Green"/>
	</Style>

	<!-- Wider PasswordBox style, inherits -->
	<Style x:Key="PasswordBoxWide" TargetType="PasswordBox" BasedOn="{StaticResource {x:Type PasswordBox}}" >
		<Setter Property="Width" Value="200"/>
	</Style>

	<!-- Style for search input field with placeholder text -->
	<Style x:Key="SearchFilterPanel" TargetType="Grid">
		<Style.Resources>
			<Style TargetType="TextBox" BasedOn="{StaticResource BaseTextBox}">
				<Setter Property="VerticalContentAlignment" Value="Center"/>
				<Setter Property="BorderThickness" Value="2"/>
				<Setter Property="Margin" Value="5"/>

				<Style.Resources>
					<Style TargetType="{x:Type Border}">
						<Setter Property="CornerRadius" Value="4"/>
					</Style>
				</Style.Resources>
			</Style>
			<Style TargetType="Label" BasedOn="{StaticResource BaseLabel}">
				<Setter Property="Background" Value="Transparent"/>
				<Setter Property="Opacity" Value="0.1"/>
				<Setter Property="VerticalAlignment" Value="Stretch"/>
				<Setter Property="HorizontalContentAlignment" Value="Left"/>
				<Setter Property="Margin" Value="5"/>
			</Style>
		</Style.Resources>
	</Style>
</ResourceDictionary>